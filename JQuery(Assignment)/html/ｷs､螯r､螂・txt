                <script>
                  $(document).ready(function() {
                  var row=0;
                    $("#addMenu").click(function(){
                      $("#menuTable").append("<tr id="+row+"><td><input type='text'></td><td><select><option>special</option></select></td><td><input type='date'></td><td><input type='text'></td><td><input type='checkbox' value='hide'>Hidden</td><td><button id='deleteMenu'>Delete Menu</button></td></tr>");
                        row=row+1;
                    });
                    $("#menuTable").on('click', '#deleteMenu', function () {
                    $(this).closest('tr').remove();
                  });
                  
                    });
                  </script>
                <hr/>
                <table id="menuTable" width="100%" border="1">
                  <tr><th>Name</th><th>Type</th><th>Date</th><th>$</th><th>Status</th><th>Option</th></tr>
